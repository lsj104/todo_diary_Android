<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.list.MovieActivity"
    android:background="@color/basic"
    android:padding="20dp">

    <EditText
        android:id="@+id/movie_write_edt"
        android:layout_marginTop="20dp"
        android:layout_width="320dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textSize="16sp"
        android:hint="Search"
        android:textCursorDrawable="@color/black"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/todonote">


    </EditText>

    <ImageButton
        android:id="@+id/movie_write_btn_search"
        android:layout_marginTop="20dp"
        android:layout_width="45dp"
        android:layout_marginStart="5dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/search"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/movie_write_edt"
        >

    </ImageButton>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/movie_write_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_write_edt"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="267dp" />


</androidx.constraintlayout.widget.ConstraintLayout>